@model Folio.Models.Portfolio

@{
    ViewData["Title"] = "Delete Stock from Portfolio";
}

<div class="row">
    <div class="col-md-12">
        <h2>Delete Stock from Portfolio: @Model.Name</h2>
        <p>Enter the amount of stock you'd like to delete in the input column and then click "Delete Stock" to remove that amount from your portfolio.</p>
        <hr />
    </div>
</div>

<form asp-action="DeleteStock">
    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
    <table class="table">
        <tr>
            <th>Ticker</th>
            <th>Amount Owned</th>
            <th>Amount to Delete</th>
            <th>Confirm</th>
        </tr>
        @foreach (PortfolioAsset asset in @Model.PortfolioAssets)
        {
            <tr>
                <td>@asset.AssetSymbol</td>
                <td>@asset.NumberOfAssetOwned</td>
                <td>@Html.TextBox("amount-delete", "", new { name = "amountdelete" })</td>
                <td><input type="submit" value="Delete Stock" /></td>
            </tr>
        }
    </table>
</form>

